<div class="d-flex justify-content-around align-items-center mb-5">
  <h1 class="card-title text-danger me-3"><%= @user.username %>'s profile</h1>
  <%= gravatar_for @user%>
</div>
<h1 class="card-title text-primary me-3">Authors articles:</h1>
<div class="flickr_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>
<ul class="list-group w-75">
  <% @articles.each do |article| %>
    <li class="card border-2 shadow mb-3 p-3">
      <div class="card-header d-flex justify-content-between">
        <p> <%= article.title %> </p>
        <p> <%= article.user.username %> </p>
      </div>
      <div class="card-body">
        <p class="card-text"><%= article.description%></p>
      </div>
      <% if logged_in? && (article.user == current_user || current_user.admin?) %>
        <div class="d-flex mt-3">
          <%= link_to("Edit article", edit_article_path(article), class: "btn btn-primary me-5") %>
          <%= link_to("Delete article", 
                    article_path(article), 
                    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, 
                    class: "btn btn-primary") %>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>
<div class="flickr_pagination mb-4">
  <div class="page_info">
    <%= page_entries_info @articles %>
  </div>
  <%= will_paginate @articles, :container => false %>
</div>
