<%= form_with model: @user, class: "card w-50"  do |f| %>
  <div class="card-body">
    <div class="form-group mb-3">
      <%= f.label :username, class: "form-label"  %>
      <br>
      <%= f.text_field :username, class: "form-control"  %>
    </div>
    <div class="form-group mb-3">
      <%= f.label :email, class: "form-label"  %>
      <br>
      <%= f.text_field :email, type: "email", class: "form-control"  %>
    </div>
    <div class="form-group mb-3">
      <%= f.label :password, class: "form-label"  %>
      <br>
      <%= f.text_field :password, type: "password", class: "form-control" %>
    </div>
    <div class="form-group d-flex justify-content-center">
      <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary") %>
    </div>
  </div>
<% end %>
