<h1 class="card-title text-primary">Create new category</h1>
<%= render "shared/errors", obj: @category %>
<%= form_with model: @category, class: "card w-50"  do |f| %>
  <div class="card-body">
    <div class="form-group mb-3">
      <%= f.label :name, "Category name", class: "form-label"  %>
      <br>
      <%= f.text_field :name, class: "form-control"  %>
    </div>
    <div class="form-group d-flex justify-content-center">
      <%= f.submit("Create category", class: "btn btn-primary") %>
    </div>
  </div>
<% end %>
