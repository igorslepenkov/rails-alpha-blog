<h1>Edit article <%= @article.id %></h1>
<%= render "errors" %>
<%= form_with(model: @article, local: true) do |f| %>
  <p>
    <%= f.label :title %>
    <br>
    <%= f.text_field :title%>
  </p>
  <p>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %>
  </p>
  <p> <%= f.submit %> </p>
<% end %>
<p> <%= link_to("Cancel and return to articles", articles_path) %> </p>
