<h1>Create a new article</h1>
<%= render "errors" %>
<%= form_with scope: :article, url: articles_path, local: true do |f| %>
  <p>
    <%= f.label :title %>
    <br>
    <%= f.text_field :title%>
  </p>
  <p>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %>
  </p>
  <p> <%= f.submit %> </p>
<% end %>
<p> <%= link_to("Articles", articles_path) %> </p>
